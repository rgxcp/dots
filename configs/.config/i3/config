exec --no-startup-id picom &
exec --no-startup-id xfce4-power-manager &
exec --no-startup-id $HOME/.config/polybar/launch.sh --colorblocks &

# |===========|
# | Variables |
# |===========|
set $alt Mod1
set $bwf 1
set $bwt 5
set $sup Mod4
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
